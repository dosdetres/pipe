<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Empresa</th>
        <th>Area</th>
        <th>Orden</th>
        <th>Area Padre</th>
        <th>Activo</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @areas.each do |area| %>
        <tr>
          <td><%= area.id %></td>
          <td>
            <% unless area.customer_company.nil? %>
                <%= area.customer_company.empresa_cliente %>
            <% end %>
          </td>
          <td><%= area.area %></td>
          <td><%= area.orden %></td>
          <td>
            <% unless area.area_padre.nil? %>
              <%= area.area_padre.area %>
            <% end %>
          </td>
          <td><%= area.activo_desc %></td>
          <td>
            <%= link_to t('helpers.submit.show'), area, class: "btn btn-default" %>
            <%= link_to t('helpers.submit.edit'), edit_area_path(area), class: "btn btn-success" %>
            <%= link_to t('helpers.submit.delete'), area, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

