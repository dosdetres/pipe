<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:customer_company_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.customer_company.company_customer %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:area)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.area %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:description)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.description %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:order)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.order %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:active)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= t(@area.active_desc) %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:area_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.up_area.nil? %>
            <%= @area.up_area.area %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:created_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.created_user.nil? %>
            <%= @area.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Area.human_attribute_name(:updated_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.updated_user.nil? %>
            <%= @area.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>

