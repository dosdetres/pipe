<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.customer_company.company_customer %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Área:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.area %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Descripción:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.description %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Orden:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.order %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Activo:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @area.active %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Área padre:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.up_area.nil? %>
            <%= @area.up_area.area %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario alta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.created_user.nil? %>
            <%= @area.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario cambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.updated_user.nil? %>
            <%= @area.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', accion: accion %></div>
  </div>
</form>

