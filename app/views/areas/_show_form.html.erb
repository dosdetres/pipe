<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.customer_company.empresa_cliente %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Área:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.area %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Descripción:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.descripcion %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Orden:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @area.orden %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Activo:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @area.activo %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Área padre:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.area_padre.nil? %>
            <%= @area.area_padre.area %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario alta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.usuario_registra.nil? %>
            <%= @area.usuario_registra.nombre_completo %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario cambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @area.usuario_actualiza.nil? %>
            <%= @area.usuario_actualiza.nombre_completo %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>

