<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>id</th>
      <th>Empresa</th>
      <th>Rfc</th>
      <th>Razonsocial</th>
      <th>Consorcio</th>
      <th>Empresa Padre</th>
      <th>Activo</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @customer_companies.each do |customer_company| %>
        <tr>
          <td><%= customer_company.id %></td>
          <td><%= customer_company.company_customer %></td>
          <td><%= customer_company.rfc %></td>
          <td><%= customer_company.registered_name %></td>
          <td><%= customer_company.consortium_desc %></td>
          <td>
            <% unless customer_company.customer_company_id.nil? %>
                <%= customer_company.up_company.company_customer %>
            <% end %>
          </td>
          <td><%= customer_company.active_desc %></td>
          <td>
            <%= link_to t('helpers.submit.show'), customer_company, class: "btn btn-default" %>
            <%= link_to t('helpers.submit.edit'), edit_customer_company_path(customer_company), class: "btn btn-success" %>
            <%= link_to t('helpers.submit.delete'), customer_company, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>