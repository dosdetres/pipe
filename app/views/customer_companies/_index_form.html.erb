<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>id</th>
      <th>Empresa</th>
      <th>Rfc</th>
      <th>Razonsocial</th>
      <th>Consorcio</th>
      <th>Empresa Padre</th>
      <th>Activo</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @customer_companies.each do |customer_company| %>
        <tr>
          <td><%= customer_company.id %></td>
          <td><%= customer_company.empresa_cliente %></td>
          <td><%= customer_company.rfc %></td>
          <td><%= customer_company.razon_social %></td>
          <td><%= customer_company.consorcio %></td>
          <td>
            <% unless customer_company.customer_company_id.nil? %>
                <%= customer_company.empresa_padre.empresa_cliente %>
            <% end %>
          </td>
          <td><%= customer_company.activo %></td>
          <td>
            <%= link_to 'Consultar', customer_company, class: "btn btn-default" %>
            <%= link_to 'Editar', edit_customer_company_path(customer_company), class: "btn btn-success" %>
            <%= link_to 'Eliminar', customer_company, class: "btn btn-danger", method: :delete, data: { confirm: '¿Estás seguro?' } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>