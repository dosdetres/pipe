
<% case accion
   when 'new' %>
    <%= link_to 'Regresar', customer_companies_path, class: "btn btn-default" %>
<% when 'edit' %>
    <%= link_to 'Consultar', @customer_company, class: "btn btn-default" %>
    <%= link_to 'Regresar', customer_companies_path, class: "btn btn-default" %>
<% when 'show' %>
    <%= link_to 'Editar', edit_customer_company_path(@customer_company), class: "btn btn-default" %>
    <%= link_to 'Regresar', customer_companies_path, class: "btn btn-default" %>
<% when 'index' %>
    <%= link_to 'Empresa Nueva', new_customer_company_path, class: "btn btn-success" %>
<% else %>

<% end %>


