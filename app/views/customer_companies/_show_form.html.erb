<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.empresa_cliente %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Rfc:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.rfc %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Razon social:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.razon_social %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Consorcio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @customer_company.consorcio %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa padre:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.customer_company_id %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Activo:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @customer_company.activo %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario alta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @customer_company.usuario_registra.nil? %>
            <%= @customer_company.usuario_registra.nombre_completo %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario cambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @customer_company.usuario_actualiza.nil? %>
            <%= @customer_company.usuario_actualiza.nombre_completo %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>