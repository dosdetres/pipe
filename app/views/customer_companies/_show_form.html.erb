<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:company_customer)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.company_customer %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:rfc)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.rfc %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:registered_name)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.registered_name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:consortium)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%=t(@customer_company.consortium_desc)%></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:customer_company_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.customer_company_id %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:active)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%=t(@customer_company.active_desc)%></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:created_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @customer_company.created_user.nil? %>
            <%= @customer_company.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=CustomerCompany.human_attribute_name(:updated_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @customer_company.updated_user.nil? %>
            <%= @customer_company.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>