<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.company_customer %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Rfc:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.rfc %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Razon social:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.registered_name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Consorcio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @customer_company.consortium %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa padre:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @customer_company.customer_company_id %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Activo:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @customer_company.active %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario alta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @customer_company.created_user.nil? %>
            <%= @customer_company.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario cambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @customer_company.updated_user.nil? %>
            <%= @customer_company.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', accion: accion %></div>
  </div>
</form>