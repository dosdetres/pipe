<% case action
when 'new' %>
<%= link_to t('views.buttons.return'), menu_options_path, class: "btn btn-default" %>
<% when 'edit' %>
<%= link_to t('views.buttons.show'), @menu_option, class: "btn btn-default" %>
<%= link_to t('views.buttons.return'), menu_options_path, class: "btn btn-default" %>
<% when 'show' %>
<%= link_to t('views.buttons.edit'), edit_menu_option_path(@menu_option), class: "btn btn-default" %>
<%= link_to t('views.buttons.return'), menu_options_path, class: "btn btn-default" %>
<% when 'index' %>
<%= link_to t('views.buttons.create', model: MenuOption.model_name.human), new_menu_option_path, class: "btn btn-success" %>
<% else %>

<% end %>