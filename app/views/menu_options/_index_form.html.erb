<div class="table-responsive">
    <table class="table table-responsive table-condensed table-hover table-striped">
      <thead>
      <tr>
        <th>id</th>
        <th>Modulo</th>
        <th>Descripcion</th>
        <th>Orden</th>
        <th>Modulo Padre</th>
        <th>Consorcio</th>
        <th>Activo</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @menu_options.each do |menu_option| %>
          <tr>
            <td><%= menu_option.id %></td>
            <td><%= menu_option.modulo %></td>
            <td><%= menu_option.descripcion %></td>
            <td><%= menu_option.orden %></td>
            <td>
              <% unless menu_option.menu_option_id.nil? %>
                  <%= menu_option.modulo_padre.modulo %>
              <% end %>
            </td>
            <td><%= menu_option.consorcio_desc %></td>
            <td><%= menu_option.activo_desc %></td>
            <td>
                <%= link_to 'Consultar', menu_option, class: "btn btn-default" %>
                <%= link_to 'Editar', edit_menu_option_path(menu_option), class: "btn btn-success" %>
                <%= link_to 'Eliminar', menu_option, class: "btn btn-danger", method: :delete, data: { confirm: '¿Estás seguro?' } %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
</div>