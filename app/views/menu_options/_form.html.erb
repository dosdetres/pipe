<%= form_for(@menu_option, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @menu_option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu_option.errors.count, "error") %> No se puede guardar:</h2>
      <ul>
      <% @menu_option.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :modulo, "Módulo" %></div>
    <div class="col-sm-10"><%= f.text_field :modulo, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :descripcion %></div>
    <div class="col-sm-10"><%= f.text_field :descripcion, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :orden %></div>
    <div class="col-sm-10"><%= f.number_field :orden, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :ruta %></div>
    <div class="col-sm-10"><%= f.text_field :ruta, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :imagen %></div>
    <div class="col-sm-10"><%= f.text_field :imagen, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :consorcio %></div>
    <div class="col-sm-10"><%= f.check_box :consorcio %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :menu_option_id, "Módulo Padre" %></div>
    <div class="col-sm-10">
      <% if accion == "new" %>
        <%= f.select :menu_option_id, @menu_options_options, { :prompt =>  '-- Seleccione una opción --' }, {:class => 'form-control'}  %>
      <% else %>
        <%= f.select :menu_option_id, @menu_options_options, { :include_blank => true }, {:class => 'form-control'}  %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :activo %></div>
    <div class="col-sm-10"><%= f.check_box :activo %></div>
  </div>
  <hr />
  <div class="form-group text-right">
    <div class="col-sm-12"><%= f.submit 'Guardar', :class => 'btn btn-success' %> <%= render 'links', accion: accion %></div>
  </div>
<% end %>

