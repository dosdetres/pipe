<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>id</th>
      <th>Puesto</th>
      <th>Nivel Usuario</th>
      <th>Area</th>
      <th>Activo</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @workplaces.each do |workplace| %>
        <tr>
          <td><%= workplace.id %></td>
          <td><%= workplace.puesto %></td>
          <td><%= workplace.nivel_usuario %></td>
          <td>
            <% unless workplace.area.nil? %>
                <%= workplace.area.area %>
            <% end %>
          </td>
          <td><%= workplace.activo_desc %></td>
          <td>
            <%= link_to t('helpers.submit.show'), workplace, class: "btn btn-default" %>
            <%= link_to t('helpers.submit.edit'), edit_workplace_path(workplace), class: "btn btn-success" %>
            <%= link_to t('helpers.submit.delete'), workplace, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>