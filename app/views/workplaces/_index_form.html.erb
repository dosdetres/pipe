<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th><%=Workplace.human_attribute_name(:id)%></th>
      <th><%=Workplace.human_attribute_name(:position)%></th>
      <th><%=Workplace.human_attribute_name(:user_level)%></th>
      <th><%=Workplace.human_attribute_name(:area_id)%></th>
      <th><%=Workplace.human_attribute_name(:active)%></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @workplaces.each do |workplace| %>
        <tr>
          <td><%= workplace.id %></td>
          <td><%= workplace.position %></td>
          <td><%= workplace.user_level %></td>
          <td>
            <% unless workplace.area.nil? %>
                <%= workplace.area.area %>
            <% end %>
          </td>
          <td><%= t(workplace.active_desc) %></td>
          <td>
            <%= link_to t('helpers.submit.show'), workplace, class: "btn btn-default" %>
            <%= link_to t('helpers.submit.edit'), edit_workplace_path(workplace), class: "btn btn-success" %>
            <%= link_to t('helpers.submit.delete'), workplace, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>