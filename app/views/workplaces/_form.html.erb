<%= form_for(@workplace, :html => {:class => 'form-horizontal'}) do |f| %>
    <%= render 'layouts/error_message', model: @workplace  %>
    <div class="form-group<%= @workplace.errors[:area_id].any? ? " has-error" : "" %>">
      <div class="col-sm-2 control-label"><%= f.label :area_id %></div>
      <div class="col-sm-10">
        <% if action == "new" %>
            <%= f.select :area_id, @areas_options, { :prompt =>  t('views.select.prompt') }, {:class => 'form-control'}  %>
        <% else %>
            <%= f.select :area_id, @areas_options, { :include_blank => true }, {:class => 'form-control'}  %>
        <% end %>
      </div>
    </div>
    <div class="form-group<%= @workplace.errors[:position].any? ? " has-error" : "" %>">
      <div class="col-sm-2 control-label"><%= f.label :position %></div>
      <div class="col-sm-10"><%= f.text_field :position, class: "form-control" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :description %></div>
      <div class="col-sm-10"><%= f.text_field :description, class: "form-control" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :user_level %></div>
      <div class="col-sm-10"><%= f.number_field :user_level, class: "form-control" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :active %></div>
      <div class="col-sm-10"><%= f.check_box :active %></div>
    </div>
    <hr />
    <div class="form-group">
      <div class="col-sm-12 control-label"><%= f.submit t('views.buttons.save'), :class => 'btn btn-success' %> <%= render 'links', action: action %></div>
    </div>
<% end %>




