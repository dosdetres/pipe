<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:area_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @workplace.area.nil? %>
            <%= @workplace.area.area %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:position)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @workplace.position %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:description)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @workplace.description %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:user_level)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @workplace.user_level %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:active)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= t(@workplace.active_desc) %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:created_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @workplace.created_user.nil? %>
            <%= @workplace.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Workplace.human_attribute_name(:updated_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @workplace.updated_user.nil? %>
            <%= @workplace.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>
