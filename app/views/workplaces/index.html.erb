<h1>Listing workplaces</h1>

<table>
  <thead>
    <tr>
      <th>Puesto</th>
      <th>Descripcion</th>
      <th>Nivel usuario</th>
      <th>Activo</th>
      <th>Area</th>
      <th>Created user</th>
      <th>Updated user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workplaces.each do |workplace| %>
      <tr>
        <td><%= workplace.puesto %></td>
        <td><%= workplace.descripcion %></td>
        <td><%= workplace.nivel_usuario %></td>
        <td><%= workplace.activo %></td>
        <td><%= workplace.area %></td>
        <td><%= workplace.created_user_id %></td>
        <td><%= workplace.updated_user_id %></td>
        <td><%= link_to 'Show', workplace %></td>
        <td><%= link_to 'Edit', edit_workplace_path(workplace) %></td>
        <td><%= link_to 'Destroy', workplace, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

