<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th>id</th>
      <th>Nombre Completo</th>
      <th>Rfc</th>
      <th>Curp</th>
      <th>Correoelectronico</th>
      <th>Consorcio</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <% unless user.full_name.nil? %>
              <%= user.full_name %>
            <% end %>
          </td>
          <td><%= user.rfc %></td>
          <td><%= user.curp %></td>
          <td><%= user.email %></td>
          <td><%= user.consortium_desc %></td>
          <td>
            <%= link_to t('helpers.submit.show'), user, class: "btn btn-default" %>
            <%= link_to t('helpers.submit.edit'), edit_user_path(user), class: "btn btn-success" %>
            <%= link_to t('helpers.submit.delete'), user, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

