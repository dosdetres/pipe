<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th><%=User.human_attribute_name(:id)%></th>
      <th><%=User.human_attribute_name(:full_name)%></th>
      <th><%=User.human_attribute_name(:rfc)%></th>
      <th><%=User.human_attribute_name(:curp)%></th>
      <th><%=User.human_attribute_name(:email)%></th>
      <th><%=User.human_attribute_name(:consortium)%></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <% unless user.full_name.nil? %>
              <%= user.full_name %>
            <% end %>
          </td>
          <td><%= user.rfc %></td>
          <td><%= user.curp %></td>
          <td><%= user.email %></td>
          <td><%= t(user.consortium_desc) %></td>
          <td>
            <%= link_to t('views.buttons.show'), user, class: "btn btn-default" %>
            <%= link_to t('views.buttons.edit'), edit_user_path(user), class: "btn btn-success" %>
            <%= link_to t('views.buttons.delete'), user, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

