<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>

  <%= render 'layouts/error_message', model: @user  %>

  <div class="form-group<%= @user.errors[:customer_company_id].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :customer_company_id %></div>
    <div class="col-sm-10">
      <% if action == "new" %>
        <%= f.select :customer_company_id, @customer_companies_options, {:prompt =>  t('helpers.select.prompt') }, {:class => 'form-control'}  %>
      <% else %>
          <%= f.select :customer_company_id, @customer_companies_options, {:include_blank => true}, {:class => 'form-control'}  %>
      <% end %>
    </div>
  </div>
  <div class="form-group<%= @user.errors[:name].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :name %></div>
    <div class="col-sm-10"><%= f.text_field :name, autofocus: true, class: "form-control" %></div>
  </div>
  <div class="form-group<%= @user.errors[:first_last_name].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :first_last_name %></div>
    <div class="col-sm-10"><%= f.text_field :first_last_name, class: "form-control" %></div>
  </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :second_last_name %></div>
      <div class="col-sm-10"><%= f.text_field :second_last_name, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :rfc %></div>
    <div class="col-sm-10"><%= f.text_field :rfc, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :curp %></div>
    <div class="col-sm-10"><%= f.text_field :curp, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :workplace_id %></div>
    <div class="col-sm-10">
      <% if action == "new" %>
        <%= f.select :workplace_id, @workplaces_options, {:prompt =>  t('helpers.select.prompt') }, {:class => 'form-control'}  %>
      <% else %>
        <%= f.select :workplace_id, @workplaces_options, {:include_blank => true}, {:class => 'form-control'}  %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :consortium %></div>
    <div class="col-sm-10"><%= f.check_box :consortium %></div>
  </div>
  <div class="form-group<%= @user.errors[:email].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :email %></div>
    <div class="col-sm-10"><%= f.email_field :email, class: "form-control" %></div>
  </div>
  <div class="form-group<%= @user.errors[:password].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-10"><%= f.password_field :password, autocomplete: "off", class: "form-control"  %></div>
  </div>
  <div class="form-group<%= @user.errors[:password_confirmation].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :password_confirmation %></div>
    <div class="col-sm-10"><%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 control-label"><%= f.submit t('helpers.submit.save'), :class => 'btn btn-success' %> <%= render 'links', action: action %></div>
  </div>
<% end %>

