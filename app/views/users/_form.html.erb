<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> No se puede guardar:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :EmpresaCliente_id, "Empresa" %></div>
    <div class="col-sm-10">
      <% if accion == "new" %>
        <%= f.select :customer_company_id, @customer_companies_options, {:prompt =>  '-- Seleccione una opción --' }, {:class => 'form-control'}  %>
      <% else %>
          <%= f.select :customer_company_id, @customer_companies_options, {:include_blank => true}, {:class => 'form-control'}  %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :nombre %></div>
    <div class="col-sm-10"><%= f.text_field :nombre, autofocus: true, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :apellido_paterno, "Apellido Paterno" %></div>
    <div class="col-sm-10"><%= f.text_field :apellido_paterno, class: "form-control" %></div>
  </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :apellido_materno,"Apellido Materno" %></div>
      <div class="col-sm-10"><%= f.text_field :apellido_materno, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :rfc %></div>
    <div class="col-sm-10"><%= f.text_field :rfc, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :curp %></div>
    <div class="col-sm-10"><%= f.text_field :curp, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :Puesto_id, "Puesto" %></div>
    <div class="col-sm-10"><%= f.text_field :Puesto_id, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :consorcio %></div>
    <div class="col-sm-10"><%= f.check_box :consorcio %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :email, "Usuario (email)" %></div>
    <div class="col-sm-10"><%= f.email_field :email, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :password, "Contraseña" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %>
    </div>
    <div class="col-sm-10"><%= f.password_field :password, autocomplete: "off", class: "form-control"  %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :password_confirmation, "Confirma la contraseña" %></div>
    <div class="col-sm-10"><%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 control-label"><%= f.submit 'Guardar', :class => 'btn btn-success' %> <%= render 'links', accion: accion %></div>
  </div>
<% end %>

