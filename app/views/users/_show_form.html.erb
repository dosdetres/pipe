<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Empresa:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.customer_company.company_customer %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Nombre:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Apellido paterno:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.first_last_name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Apellido materno:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.second_last_name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Rfc:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.rfc %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Curp:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.curp %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Puesto:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @user.workplace.nil? %>
          <%= @user.workplace.position %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Consorcio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @user.consortium %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.email %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuarioalta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @user.created_user.nil? %>
            <%= @user.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuariocambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @user.updated_user.nil? %>
            <%= @user.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', accion: accion %></div>
  </div>
</form>

