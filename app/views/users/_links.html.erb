<% case accion
  when 'new' %>
    <%= link_to 'Regresar', users_path, class: "btn btn-default" %>
<% when 'edit' %>
    <%= link_to 'Consultar', @user, class: "btn btn-default" %>
    <%= link_to 'Regresar', users_path, class: "btn btn-default" %>
<% when 'show' %>
    <%= link_to 'Editar', edit_user_path(@user), class: "btn btn-default" %>
    <%= link_to 'Regresar', users_path, class: "btn btn-default" %>
<% when 'index' %>
    <%= link_to 'Usuario Nuevo', new_user_path, class: "btn btn-success" %>
<% else %>

<% end %>