<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Rol:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @role.rol %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Descripci√≥n:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @role.descripcion %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Activo:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @role.activo %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario Alta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @role.usuario_registra.nil? %>
            <%= @role.usuario_registra.nombre_completo %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario Cambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @role.usuario_actualiza.nil? %>
            <%= @role.usuario_actualiza.nombre_completo %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>

