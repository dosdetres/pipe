<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Role.human_attribute_name(:role)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @role.role %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Role.human_attribute_name(:description)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @role.description %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Role.human_attribute_name(:active)%></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= t(@role.active_desc) %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Role.human_attribute_name(:created_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @role.created_user.nil? %>
            <%= @role.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%=Role.human_attribute_name(:updated_user_id)%></label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @role.updated_user.nil? %>
            <%= @role.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>

