<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Rol:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @role.role %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Descripci√≥n:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @role.description %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Activo:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% if @role.active %>
            Si
        <% else %>
            No
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario Alta:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @role.created_user.nil? %>
            <%= @role.created_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Usuario Cambio:</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <% unless @role.updated_user.nil? %>
            <%= @role.updated_user.full_name %>
        <% end %>
      </p>
    </div>
  </div>
  <hr />
  <div class="form-group">
    <div class="col-sm-12 text-right"><%= render 'links', action: action %></div>
  </div>
</form>

