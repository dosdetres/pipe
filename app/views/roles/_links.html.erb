<% case accion
     when 'new' %>
    <%= link_to 'Regresar', roles_path, class: "btn btn-default" %>
<% when 'edit' %>
    <%= link_to 'Consultar', @role, class: "btn btn-default" %>
    <%= link_to 'Regresar', roles_path, class: "btn btn-default" %>
<% when 'show' %>
    <%= link_to 'Editar', edit_user_path(@role), class: "btn btn-default" %>
    <%= link_to 'Regresar', roles_path, class: "btn btn-default" %>
<% when 'index' %>
    <%= link_to 'Rol Nuevo', new_role_path, class: "btn btn-success" %>
<% else %>

<% end %>