<% case action
     when 'new' %>
    <%= link_to t('views.buttons.return'), roles_path, class: "btn btn-default" %>
<% when 'edit' %>
    <%= link_to t('views.buttons.show'), @role, class: "btn btn-default" %>
    <%= link_to t('views.buttons.return'), roles_path, class: "btn btn-default" %>
<% when 'show' %>
    <%= link_to t('views.buttons.edit'), edit_role_path(@role), class: "btn btn-default" %>
    <%= link_to t('views.buttons.return'), roles_path, class: "btn btn-default" %>
<% when 'index' %>
    <%= link_to t('views.buttons.create', model: Role.model_name.human), new_role_path, class: "btn btn-success" %>
<% else %>

<% end %>