<div class="table-responsive">
  <table class="table table-responsive table-condensed table-hover table-striped">
    <thead>
    <tr>
      <th><%=Role.human_attribute_name(:id)%></th>
      <th><%=Role.human_attribute_name(:customer_company_id)%></th>
      <th><%=Role.human_attribute_name(:role)%></th>
      <th><%=Role.human_attribute_name(:description)%></th>
      <th><%=Role.human_attribute_name(:active)%></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @roles.each do |role| %>
        <tr>
          <td><%= role.id %></td>
          <td>
            <% unless role.customer_company.nil? %>
                <%= role.customer_company.company_customer %>
            <% end %>
          </td>
          <td><%= role.role %></td>
          <td><%= role.description %></td>
          <td><%= t(role.active_desc) %></td>
          <td>
            <%= link_to t('views.buttons.show'), role, class: "btn btn-default" %>
            <%= link_to t('views.buttons.edit'), edit_role_path(role), class: "btn btn-success" %>
            <%= link_to t('views.buttons.delete'), role, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm_are_you_sure') } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

