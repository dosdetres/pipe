<%= form_for(@role, :html => {:class => 'form-horizontal'}) do |f| %>
    <%= render 'layouts/error_message', model: @role  %>
    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :rol %></div>
      <div class="col-sm-10"><%= f.text_field :rol, autofocus: true, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :descripcion %></div>
      <div class="col-sm-10"><%= f.text_field :descripcion, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label"><%= f.label :activo %></div>
      <div class="col-sm-10"><%= f.check_box :activo %></div>
    </div>

    <div class="form-group">
      <div class="col-sm-12 control-label"><%= f.submit t('helpers.submit.save'), :class => 'btn btn-success' %> <%= render 'links', action: action %></div>
    </div>
<% end %>
