<%= form_for(@role, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= render 'layouts/error_message', model: @role  %>
  <div class="form-group<%= @role.errors[:customer_company_id].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :customer_company_id %></div>
    <div class="col-sm-10">
      <% if action == "new" %>
        <%= f.select :customer_company_id, @customer_companies_options, { :prompt =>  t('helpers.select.prompt') }, {:class => 'form-control'}  %>
      <% else %>
        <%= f.select :customer_company_id, @customer_companies_options, { :include_blank => true }, {:class => 'form-control'}  %>
      <% end %>
    </div>
  </div>
  <div class="form-group<%= @role.errors[:role].any? ? " has-error" : "" %>">
    <div class="col-sm-2 control-label"><%= f.label :role %></div>
    <div class="col-sm-10"><%= f.text_field :role, autofocus: true, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :description %></div>
    <div class="col-sm-10"><%= f.text_field :description, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label"><%= f.label :active %></div>
    <div class="col-sm-10"><%= f.check_box :active %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-12 control-label"><%= f.submit t("helpers.submit.save"), :class => 'btn btn-success' %> <%= render 'links', action: action %></div>
  </div>
<% end %>
