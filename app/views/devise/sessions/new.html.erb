                            <div class="form-group">
                              <%= f.check_box :remember_me %>
                              <%= f.label t('views.authentication.remember_me') %>
                            </div>
                        <% end -%>
                        <div class="form-group">
                          <%= f.submit t('views.buttons.login'), class: "btn btn-primary" %>
                        </div>
                        <div class="form-group">
                          <% if User.count.zero? %>
                              <%= render "devise/shared/links" %>
                          <% end %>
                        </div>

