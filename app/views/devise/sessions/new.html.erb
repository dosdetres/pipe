                        <div class="form-group">
                          <%= f.label t('views.authentication.user') %>
                          <%= f.email_field :email, autofocus: true, class: "form-control" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password %>
                          <%= f.password_field :password, autofocus: true, class: "form-control" %>
                        </div>
